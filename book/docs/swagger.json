    "definitions": {
        "structs.AuthorBasicResponse": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "structs.BookDeleteResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "boolean"
                }
            }
        },
        "structs.BookResponse": {
            "type": "object",
            "properties": {
                "authors": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/structs.AuthorBasicResponse"
                    }
                },
                "description": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "title": {
                    "type": "string"
                },
                "userId": {
                    "type": "integer"
                }
            }
        },
        "structs.BooksPaginatedResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "object",
                    "properties": {
                        "limit": {
                            "type": "integer"
                        },
                        "next_page": {
                            "type": "integer"
                        },
                        "offset": {
                            "type": "integer"
                        },
                        "page": {
                            "type": "integer"
                        },
                        "prev_page": {
                            "type": "integer"
                        },
                        "records": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "integer"
                                    },
                                    "title": {
                                        "type": "string"
                                    },
                                    "url": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "total_page": {
                            "type": "integer"
                        },
                        "total_record": {
                            "type": "integer"
                        }
                    }
                }
            }
        },
        "structs.CreateBookInput": {
            "type": "object",
            "required": [
                "authorIds",
                "title"
            ],
            "properties": {
                "authorIds": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "description": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        },
